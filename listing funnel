<script>
/* â”€â”€ STATE â”€â”€ */
let currentStep = 1;
let selectedPlan = null;
let isAnnual = false;
const promos = { 'APTFIND20': 20, 'WELCOME10': 10 };

const planData = {
  basic:   { name: 'Basic',        monthly: 49,  annual: 39,  features: ['Standard directory listing','Up to 6 photos','Lead capture form','Basic amenity tags','City search visibility'] },
  pro:     { name: 'Professional', monthly: 149, annual: 119, features: ['Priority search placement','Up to 30 photos + virtual tour','Real-time lead notifications','Analytics dashboard','Featured badge'] },
  premium: { name: 'Premium',      monthly: 349, annual: 279, features: ['Homepage featured placement','Top of city search results','Unlimited photos & floor plans','Branded landing page','CRM integration','Dedicated account manager'] }
};

/* â”€â”€ PLAN SELECTION â”€â”€ */
function selectPlan(plan) {
  selectedPlan = plan;
  document.querySelectorAll('.plan-card').forEach(c => c.classList.remove('selected'));
  document.getElementById('plan-' + plan).classList.add('selected');
  document.getElementById('planNextBtn').disabled = false;
  updateSidebar();
  updateOrderSummary();
}

/* â”€â”€ BILLING TOGGLE â”€â”€ */
function toggleBilling() {
  isAnnual = !isAnnual;
  document.getElementById('billingToggle').classList.toggle('on', isAnnual);
  document.querySelectorAll('.price-num').forEach(el => {
    el.textContent = isAnnual ? el.dataset.annual : el.dataset.monthly;
  });
  ['basic','pro','premium'].forEach(p => {
    const el = document.getElementById('note-' + p);
    el.textContent = isAnnual ? `Save $${(planData[p].monthly - planData[p].annual) * 12}/year` : '';
  });
  updateSidebar();
  updateOrderSummary();
}

/* â”€â”€ SIDEBAR SUMMARY â”€â”€ */
function updateSidebar() {
  if (!selectedPlan) return;
  const p = planData[selectedPlan];
  const price = isAnnual ? p.annual : p.monthly;
  document.getElementById('summaryPlanName').textContent = p.name;
  document.getElementById('summaryPrice').innerHTML = `$${price}<span style="font-size:1rem;font-weight:400">/mo</span>`;
  document.getElementById('summaryBilling').textContent = isAnnual ? 'Billed annually Â· Cancel anytime' : 'Billed monthly Â· Cancel anytime';
  const featHtml = p.features.map(f => `<div class="summary-feature">${f}</div>`).join('');
  document.getElementById('summaryFeatures').innerHTML = featHtml;
}

/* â”€â”€ ORDER SUMMARY â”€â”€ */
let promoDiscount = 0;
function updateOrderSummary() {
  if (!selectedPlan) return;
  const p = planData[selectedPlan];
  const base = isAnnual ? p.annual * 12 : p.monthly;
  const annualSaving = isAnnual ? (p.monthly - p.annual) * 12 : 0;
  const promoAmt = Math.round(base * promoDiscount / 100);
  const total = base - promoAmt;

  document.getElementById('orderPlanLabel').textContent = `${p.name} Plan`;
  document.getElementById('orderBasePrice').textContent = `$${base.toLocaleString()}${isAnnual ? '/yr' : '/mo'}`;
  document.getElementById('annualSavingsLine').style.display = isAnnual ? 'flex' : 'none';
  document.getElementById('annualSavingsAmt').textContent = `âˆ’$${annualSaving}`;
  document.getElementById('orderTotal').textContent = `$${total.toLocaleString()}`;
  document.getElementById('totalLabel').textContent = isAnnual ? 'Total due today (annual)' : 'Total due today';
  document.getElementById('orderNote').textContent = isAnnual
    ? `You'll be billed $${(p.annual * 12).toLocaleString()} today. Renews annually. Cancel anytime.`
    : `You'll be billed $${p.monthly}/month. Cancel anytime â€” no fees.`;
}

/* â”€â”€ PROMO CODE â”€â”€ */
function applyPromo() {
  const code = document.getElementById('promoInput').value.trim().toUpperCase();
  const msg = document.getElementById('promoMsg');
  if (promos[code]) {
    promoDiscount = promos[code];
    msg.style.display = 'block';
    msg.style.color = 'var(--green)';
    msg.textContent = `âœ“ Promo applied â€” ${promoDiscount}% off!`;
    document.getElementById('promoLine').style.display = 'flex';
    document.getElementById('promoCode').textContent = code;
    const p = planData[selectedPlan];
    const base = isAnnual ? p.annual * 12 : p.monthly;
    const amt = Math.round(base * promoDiscount / 100);
    document.getElementById('promoAmt').textContent = `âˆ’$${amt}`;
    updateOrderSummary();
  } else {
    msg.style.display = 'block';
    msg.style.color = 'var(--rust)';
    msg.textContent = 'Invalid promo code. Try APTFIND20 or WELCOME10.';
  }
}

/* â”€â”€ COMPARE TABLE â”€â”€ */
function toggleCompare() {
  const t = document.getElementById('compareTable');
  const btn = document.getElementById('compareToggle');
  t.classList.toggle('visible');
  btn.classList.toggle('open');
}

/* â”€â”€ STEP NAVIGATION â”€â”€ */
function nextStep() {
  if (currentStep < 5) goToStep(currentStep + 1);
}
function prevStep() {
  if (currentStep > 1) goToStep(currentStep - 1);
}
function goToStep(n) {
  if (n > currentStep && n > 1 && !selectedPlan) return;
  document.getElementById('step-' + currentStep).classList.remove('active');
  document.getElementById('prog-' + currentStep).classList.remove('active');
  for (let i = 1; i < n; i++) {
    document.getElementById('prog-' + i).classList.add('completed');
    document.getElementById('prog-' + i).querySelector('.prog-dot').textContent = 'âœ“';
  }
  currentStep = n;
  document.getElementById('step-' + n).classList.add('active');
  document.getElementById('prog-' + n).classList.add('active');
  if (n <= 4) {
    document.getElementById('prog-' + n).querySelector('.prog-dot').textContent = n;
  }
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

/* â”€â”€ PAYMENT PROCESSING â”€â”€ */
function processPayment() {
  const btn = document.getElementById('payBtnText');
  btn.textContent = 'Processing...';
  setTimeout(() => {
    // Set confirmation data
    const p = planData[selectedPlan || 'pro'];
    const price = isAnnual ? p.annual : p.monthly;
    document.getElementById('confPlan').textContent = p.name;
    document.getElementById('confBilling').textContent = `$${price}/${isAnnual ? 'yr' : 'mo'}`;
    document.getElementById('orderRef').textContent = Math.floor(100000 + Math.random() * 900000);
    const nextBill = new Date();
    nextBill.setMonth(nextBill.getMonth() + (isAnnual ? 12 : 1));
    document.getElementById('confNextBill').textContent = nextBill.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
    btn.textContent = 'Pay & Activate Listing';
    goToStep(5);
    // Sparkle the progress
    document.getElementById('prog-5').classList.add('active', 'completed');
  }, 1800);
}

/* â”€â”€ MISC â”€â”€ */
function toggleAmenity(el) {
  el.classList.toggle('checked');
}
function togglePassword() {
  const inp = document.getElementById('passwordInput');
  inp.type = inp.type === 'password' ? 'text' : 'password';
}
function formatCard(el) {
  let v = el.value.replace(/\D/g,'').substring(0,16);
  el.value = v.replace(/(.{4})/g,'$1  ').trim();
}
function formatExpiry(el) {
  let v = el.value.replace(/\D/g,'').substring(0,4);
  if (v.length >= 2) v = v.substring(0,2) + ' / ' + v.substring(2);
  el.value = v;
}
function simulateUpload() {
  const p = document.getElementById('photoPreviews');
  const imgs = ['https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=200&q=70','https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=200&q=70'];
  imgs.forEach(src => {
    if (p.children.length < 6) {
      const d = document.createElement('div');
      d.className = 'photo-preview';
      d.innerHTML = `<img src="${src}" alt="">`;
      p.appendChild(d);
    }
  });
}

// Auto-select Pro on load
selectPlan('pro');
</script>
</body>
</html>
